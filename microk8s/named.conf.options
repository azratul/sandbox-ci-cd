options {
    directory "/var/cache/bind";
    dnssec-validation auto;
    auth-nxdomain no;    # conform to RFC1035
    #listen-on-v6 { any; };
    listen-on port 53 { localhost; 192.168.0.0/16; };
    allow-query { localhost; 192.168.0.0/16; };
    forwarders { 8.8.8.8; 1.1.1.1; };
    recursion yes;
};
